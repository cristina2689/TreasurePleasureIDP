<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.project.treasurepleasure.AddGameActivity" >

    <EditText
        android:id="@+id/gametitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:ems="10" />

    <TextView
        android:id="@+id/treasurestorytitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gametitle"
        android:layout_below="@+id/gametitle"
        android:layout_marginTop="14dp"
        android:text="Add treasure story:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gametitle"
        android:layout_alignLeft="@+id/gametitle"
        android:layout_marginBottom="52dp"
        android:text="Insert New Game&apos;s Title:"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/treasurestory"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/treasurestorytitle"
        android:layout_below="@+id/treasurestorytitle"
        android:ems="10" />

    <Button
        android:id="@+id/selectdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/treasurestory"
        android:layout_below="@+id/treasurestory"
        android:layout_marginTop="15dp"
        android:text="Select start date:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/selectdateview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/selectdate"
        android:layout_below="@+id/selectdate"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:text="##date##"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/selectenddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/selectdate"
        android:layout_below="@+id/selectdate"
        android:text="Select start date:"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/selectenddateview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/selectdate"
        android:layout_below="@+id/selectenddate"
        android:text="##date##"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>