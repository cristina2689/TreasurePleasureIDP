    <Button
        android:id="@+id/selectstartdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/treasurestory"
        android:text="Select start date"
        android:textColor="#000000" />

    <Button
        android:id="@+id/selectenddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/selectstartdate"
        android:layout_marginBottom="28dp"
        android:text="Select end date"
        android:textColor="#000000" />

     <Button
         android:id="@+id/addGameNext"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/treasurestory"
         android:layout_marginBottom="40dp"
         android:clickable="false"
         android:onClick="addGameNext"
         android:text="Next"
         android:textColor="#505050" />

</RelativeLayout>